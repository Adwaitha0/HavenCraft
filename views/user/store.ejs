<script>
function fetchStockAndUpdateLink(size, productId) {
  fetch(`/user/getStock?productId=${productId}&size=${size}`)
    .then(response => response.json())
    .then(data => {
      if (data.stock === 'Out of stock') {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'Product is out of stock!',
        });
      } else {
        fetch(`/user/addToCart?productId=${productId}&size=${size}`, {
          method: 'GET',
        })
          .then(response => {
            if (!response.ok) {
              return response.json().then(err => {
                throw new Error(err.message);
              });
            }
            window.location.href = '/user/user_addToCart';
          })
          .catch(error => {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: error.message,
            });
          });
      }
    })
    .catch(error => {
      console.error('Error fetching stock:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred while checking the stock!',
      });
    });
}
</script>

<script>
document.getElementById('search-form').addEventListener('submit', function(event) {
  event.preventDefault();  
  let query = document.getElementById('search-input').value.trim().toLowerCase();
  const categories = {
      'candle holder': '/user/candleHolder',
      'vase': '/user/vase',
      'table lamp': '/user/tableLamp',
      'artifact' : '/user/artifact',
      'sculpture' : '/user/sculpture',
      'decorative box' : '/user/decorativeBox',
      'planter' : '/user/planter',
      'crystal ceiling fan' : '/user/crystalCeiling fan',
      'wall light' : '/user/wallLight',      
  };
  if (categories[query.toLowerCase()]) {
      window.location.href = categories[query.toLowerCase()];
  } else {
      alert('Category not found');
  }
});

  

document.querySelectorAll('.add-to-wishlist').forEach(button => {
  button.addEventListener('click', async (e) => {
    const productId = e.currentTarget.getAttribute('data-product-id'); 
    console.log(productId);
    try {
      const response = await fetch(`/user/addToWishlist/${productId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
      });

      const data = await response.json();
      console.log(data)

      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: data.message,
          showConfirmButton: false,
          timer: 1500,
        }).then(() => {
          window.location.href = '/user/store';
        });
      } else {
        Swal.fire({
          icon: 'info',  
          title: data.message || 'Oops! Something went wrong.',
        });
      }
    } catch (error) {
      console.error('Error adding to wishlist:', error);
      Swal.fire({
        icon: 'error',
        title: 'Failed to add to wishlist',
        text: 'Please try again later.',
      });
    }
  });
});
</script>



