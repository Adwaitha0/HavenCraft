<script>
   async function openRazorpay(orderId) {
    console.log(`razorPay hit ${orderId}`)
    try {
        if (!orderId) {
            throw new Error("Order ID is missing.");
        }

        const response = await fetch(`/user/resumeOrderPayment/${orderId}`);
        const order = await response.json();

        if (!order || !order.amount) {
            throw new Error("Order details not found.");
        }

        const amount = order.amount * 100; 

        return new Promise((resolve, reject) => {
            const options = {
                key: "rzp_test_KS1wwJqge5T9bF",
                amount: amount,
                currency: "INR",
                name: "HavenCraft",
                description: "Payment for order",
                handler: async function (paymentResponse) {
                    console.log("RazorPay Payment Successful:", paymentResponse);

                    const updateResponse = await fetch(`/user/update-payment/${orderId}`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ isPaid: true }),
                    });

                    if (updateResponse.ok) {
                        Swal.fire({
                            title: "Payment Successful",
                            text: "Your order has been paid successfully.",
                            icon: "success",
                            confirmButtonText: "OK",
                        }).then(() => {
                            window.location.href = "/user/order-success";
                        });
                        resolve(true);
                    } else {
                        throw new Error("Failed to update payment status.");
                    }
                },
                prefill: {
                    name: "Adwaitha",
                    email: "adwaithapk2018@gmail.com",
                    contact: "9122424131",
                },
                theme: { color: "#3399cc" },
            };

            const rzp = new Razorpay(options);
            rzp.open();

            rzp.on("payment.failed", function (errorResponse) {
                console.error("RazorPay Payment Failed:", errorResponse);

                Swal.fire({
                    title: "Payment Failed",
                    text: "Payment was not completed. Please try again or choose another method.",
                    icon: "error",
                    confirmButtonText: "OK",
                });

                resolve(false);
            });
        });
    } catch (error) {
        console.error("Error in payment process:", error);
        Swal.fire({
            title: "Error",
            text: error.message || "Something went wrong. Please try again later.",
            icon: "error",
            confirmButtonText: "OK",
        });
    }
}

</script>




